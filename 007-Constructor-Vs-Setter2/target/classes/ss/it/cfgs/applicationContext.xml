<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="emp" class="ss.it.beans.Employee">
		<constructor-arg name="name" value="suresh" />
		<constructor-arg name="id" value="10012" />
		<constructor-arg name="dept" value="deve" />
		<!-- <constructor-arg name="add" value="hyd" /> -->
	</bean>

	<bean id="emp1" class="ss.it.beans.Employee">
		<property name="mobile" value="1234567890" />
		<property name="add" value="hyd"/>
	</bean>

</beans>
